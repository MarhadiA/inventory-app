<%- include('../partials/header') %>

<h2>Tambah Kategori Baru</h2>

<% if (typeof errors !== 'undefined' && errors && errors.length > 0) { %>
    <div class="error-message">
        <ul>
            <% errors.forEach(error => { %>
                <li><%= error %></li>
            <% }) %>
        </ul>
    </div>
<% } %>

<form action="/categories/add" method="POST">
    <div>
        <label for="name">Nama Kategori:</label>
        <input type="text" id="name" name="name" value="<%= typeof category !== 'undefined' ? category.name : '' %>" required>
    </div>
    <div>
        <label for="description">Deskripsi:</label>
        <textarea id="description" name="description"><%= typeof category !== 'undefined' ? category.description : '' %></textarea>
    </div>
    <div>
        <button type="submit" class="btn btn-add">Tambah Kategori</button>
        <a href="/categories" class="btn">Batal</a>
    </div>
</form>

<%- include('../partials/footer') %>